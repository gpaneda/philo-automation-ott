{
  "compilerOptions": {
    "target": "es2021",
    "module": "CommonJS",
    "lib": [ "es2021","dom"],
    "typeRoots": ["./node_modules/@types"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["node_modules/*",
        "*"]
    }
  },
  "include": ["src/**/*", "simpleWebSocketServer.ts"],
  "exclude": ["node_modules", "**/*.test.ts"]
} 