{
  "name": "firetv-automation",
  "version": "1.0.0",
  "description": "Fire TV Automation Framework",
  "main": "index.js",
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:login": "NODE_OPTIONS=--experimental-vm-modules jest src/tests/login.test.ts",
    "test:watch": "jest --watch",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare-device": "ts-node scripts/prepare-device.ts",
    "test:homescreen": "NODE_OPTIONS=--experimental-vm-modules jest src/tests/homescreen.test.ts",
    "test:gmail": "NODE_OPTIONS=--experimental-vm-modules jest src/tests/gmail.helper.test.ts",
    "test:formatUiDump": "ts-node src/scripts/formatUiDump.ts",
    "test:navigation": "NODE_OPTIONS=--experimental-vm-modules jest src/tests/navigation.test.ts",
    "test:landing": "NODE_OPTIONS=--experimental-vm-modules jest src/tests/landingPage.test.ts",
    "test:playback": "NODE_OPTIONS=--experimental-vm-modules jest src/tests/playback.test.ts",
    "test:series": "NODE_OPTIONS=--experimental-vm-modules jest src/tests/seriesDetails.test.ts"
  },
  "jest": {
    "reporters": [
      "default",
      ["jest-html-reporter", {
        "pageTitle": "Fire TV Test Report",
        "outputPath": "./test-report.html",
        "includeFailureMsg": true,
        "includeConsoleLog": true
      }]
    ]
  },
  "dependencies": {
    "@types/resemblejs": "^4.1.3",
    "@wdio/cli": "^7.30.2",
    "@wdio/local-runner": "7.30.2",
    "@wdio/mocha-framework": "7.30.2",
    "@wdio/spec-reporter": "7.30.2",
    "appium": "^2.4.1",
    "axios": "^1.7.9",
    "dotenv": "^16.4.7",
    "google-auth-library": "^9.6.3",
    "googleapis": "^133.0.0",
    "open": "^10.1.0",
    "resemblejs": "^5.0.0",
    "webdriverio": "^7.30.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/jquery": "^3.5.32",
    "@types/node": "^18.19.70",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@wdio/types": "^9.5.0",
    "appium-uiautomator2-driver": "^2.34.1",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "jest-html-reporter": "^3.10.2",
    "prettier": "^2.0.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5"
  }
}
